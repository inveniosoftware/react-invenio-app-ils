{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/lib/api/*"],
      "@api": ["src/lib/api"],
      "@authentication/*": ["src/lib/authentication/*"],
      "@authentication": ["src/lib/authentication"],
      "@components/*": ["src/lib/components/*"],
      "@components": ["src/lib/components"],
      "@config/*": ["src/lib/config/*"],
      "@config": ["src/lib/config"],
      "@forms/*": ["src/lib/forms/*"],
      "@forms": ["src/lib/forms"],
      "@modules/*": ["src/lib/modules/*"],
      "@modules": ["src/lib/modules"],
      "@pages/*": ["src/lib/pages/*"],
      "@pages": ["src/lib/pages"],
      "@routes/*": ["src/lib/routes/*"],
      "@routes": ["src/lib/routes"],
      "@history/*": ["src/lib/history/*"],
      "@history": ["src/lib/history"],
      "@theme/*": ["src/semantic-ui/*"],
      "@theme": ["src/semantic-ui"]
    },
  },
  "include": ["src"]
}
